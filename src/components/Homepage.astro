// Astro Component for Tangize.com Homepage
---
import Layout from '../components/Layout.astro';
---

<Layout>
  <section class="hero">
    <h1>Welcome to Tangize</h1>
    <p>Your central hub for Digital Existential Holography, personal coaching, and community growth.</p>
  </section>

  <section class="offerings">
    <div class="offering">
      <h2>Digital Existential Holography Suite</h2>
      <p>Engage with our tools for introspection, resilience, and self-realization.</p>
      <a href="/deh">Learn More</a>
    </div>
    <div class="offering">
      <h2>Coaching Programs</h2>
      <p>Personal coaching designed to align your goals with tangible growth.</p>
      <a href="/coaching">Explore Programs</a>
    </div>
    <div class="offering">
      <h2>Our Manifesto</h2>
      <p>Read our manifesto and understand our drive towards a better future.</p>
      <a href="/manifesto">Read the Manifesto</a>
    </div>
  </section>

  <style>
    .hero {
      background-color: #0077cc;
      color: white;
      padding: 4rem;
      text-align: center;
    }

    .offerings {
      display: flex;
      gap: 2rem;
      padding: 2rem;
      justify-content: center;
      flex-wrap: wrap;
    }

    .offering {
      background: #fff;
      padding: 1.5rem;
      border-radius: 8px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
      max-width: 300px;
      text-align: center;
    }

    .offering a {
      display: inline-block;
      margin-top: 1rem;
      color: #0077cc;
      font-weight: bold;
    }
  </style>
</Layout>
